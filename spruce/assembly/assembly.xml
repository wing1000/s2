<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<!--groupId:artifactId:type:version[:classifier] -->
				<exclude>*:libthrift:*:0.5.0</exclude>
				<exclude>*:thrift:*:0.2.0</exclude>
				<exclude>*:zookeeper:*:3.3.0</exclude>
				<exclude>*:servlet-api-2.5:*:6.1.14</exclude>
				<exclude>*:servlet-api:*:2.5-20081211</exclude>
				<exclude>*:servlet-api:*:2.5</exclude>
				<exclude>*:jsp-api-2.1:*:6.1.14</exclude>
				<exclude>*:jsp:*:2.1-6.1.14</exclude>
				<exclude>*:jsp-api:*:2.1-6.1.14</exclude>
				<exclude>*:jsp-2.1:*:6.1.14</exclude>
				<exclude>*:jasper-runtime:*:5.5.12</exclude>
				<exclude>*:jasper-compiler:*:5.5.12</exclude>
				<exclude>*:jetty:*:6.1.26</exclude>
				<exclude>*:jetty-util:*:6.1.26</exclude>
				<exclude>*:avro:*:1.3.3</exclude>
				<exclude>*:specs_2.8.0:*:1.6.5</exclude>
				<exclude>*:slf4j-jdk14:*:1.5.2</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>scripts</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>start-single.sh</include>
				<include>stop-single.sh</include>
				<include>start.bat</include>
				<include>server.sh</include>
				<include>startup_nohup.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>resources</directory>
			<outputDirectory>/config</outputDirectory>
			<includes>
				<include>log4j.properties</include>
			</includes>
		</fileSet>

		<fileSet>

			<outputDirectory>/logs</outputDirectory>
			<includes>
				<include>log.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>